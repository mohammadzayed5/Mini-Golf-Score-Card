{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"allowImportingTsExtensions": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
			"@/content/*": ["app/(main)/release-notes/content/*"]
    }
	},
 "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
, "scripts/take_og_snapshot.mjs"  ],
	"exclude": ["node_modules"],
	"mdx": {
    "plugins": [
        "remark-frontmatter",
        ["remark-mdx-frontmatter", { "name": "metadata" }],
    ]
	}
}
